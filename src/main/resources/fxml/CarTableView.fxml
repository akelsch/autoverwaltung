<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.htwsaar.prog3.carrental.controller.table.CarTableViewController"
            onKeyPressed="#handleKeyEvent"
            stylesheets="@styles.css">
    <top>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS"/>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS"/>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS"/>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS"/>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS"/>
            </columnConstraints>
            <!-- Row 0 -->
            <MenuBar GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="5">
                <Menu text="%menubar.file">
                    <MenuItem text="%menubar.file.cars" onAction="#handleCarMenuItemClicked"/>
                    <MenuItem text="%menubar.file.customers" onAction="#handleCustomerMenuItemClicked"/>
                    <MenuItem text="%menubar.file.employees" onAction="#handleEmployeeMenuItemClicked"/>
                    <MenuItem text="%menubar.file.rentals" onAction="#handleRentalMenuItemClicked"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="%menubar.file.close" onAction="#handleCloseMenuItemClicked"/>
                </Menu>
                <Menu text="%menubar.edit">
                    <MenuItem text="%menubar.edit.new" onAction="#handleNewClicked"/>
                    <MenuItem text="%menubar.edit.edit" onAction="#handleEditClicked"/>
                    <MenuItem text="%menubar.edit.delete" onAction="#handleDeleteClicked"/>
                    <MenuItem text="%menubar.edit.rent" onAction="#handleRentClicked"/>
                </Menu>
                <Menu text="%menubar.help">
                    <MenuItem text="%menubar.help.about" onAction="#handleAboutMenuItemClicked"/>
                </Menu>
            </MenuBar>
            <!-- Row 1 -->
            <ComboBox fx:id="searchAttributeComboBox" GridPane.rowIndex="1" GridPane.columnIndex="0" maxWidth="Infinity"
                      promptText="%search.prompt.column"/>
            <ComboBox fx:id="searchOperatorComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="Infinity"
                      promptText="%search.prompt.operator"/>
            <TextField fx:id="searchValueTextField" GridPane.rowIndex="1" GridPane.columnIndex="2" maxWidth="Infinity"
                       promptText="%search.prompt.value"/>
            <Button GridPane.rowIndex="1" GridPane.columnIndex="3" maxWidth="Infinity"
                    text="%search.button.submit" onAction="#handleSearchButtonClicked"/>
            <Button GridPane.rowIndex="1" GridPane.columnIndex="4" maxWidth="Infinity"
                    text="%search.button.reset" onAction="#handleClearFilterButtonClicked"/>
        </GridPane>
    </top>
    <center>
        <TableView fx:id="entityTable">
            <columns>
                <TableColumn text="%car.label.id">
                    <cellValueFactory>
                        <PropertyValueFactory property="id"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.year">
                    <cellValueFactory>
                        <PropertyValueFactory property="year"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.brand">
                    <cellValueFactory>
                        <PropertyValueFactory property="brand"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.model">
                    <cellValueFactory>
                        <PropertyValueFactory property="model"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.type">
                    <cellValueFactory>
                        <PropertyValueFactory property="type"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.color">
                    <cellValueFactory>
                        <PropertyValueFactory property="color"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.daily-rate">
                    <cellValueFactory>
                        <PropertyValueFactory property="dailyRate"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.doors">
                    <cellValueFactory>
                        <PropertyValueFactory property="doors"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.transmission">
                    <cellValueFactory>
                        <PropertyValueFactory property="transmission"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.fuel">
                    <cellValueFactory>
                        <PropertyValueFactory property="fuel"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.horsepower">
                    <cellValueFactory>
                        <PropertyValueFactory property="horsepower"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.mileage">
                    <cellValueFactory>
                        <PropertyValueFactory property="mileage"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.tires">
                    <cellValueFactory>
                        <PropertyValueFactory property="tires"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.parking-lot">
                    <cellValueFactory>
                        <PropertyValueFactory property="parkingLot"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.license-number">
                    <cellValueFactory>
                        <PropertyValueFactory property="licenseNumber"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.vin">
                    <cellValueFactory>
                        <PropertyValueFactory property="vin"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.next-inspection">
                    <cellValueFactory>
                        <PropertyValueFactory property="nextInspection"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%car.label.defects">
                    <cellValueFactory>
                        <PropertyValueFactory property="defects"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem text="%menubar.edit.new" onAction="#handleNewClicked"/>
                        <MenuItem text="%menubar.edit.edit" onAction="#handleEditClicked"/>
                        <MenuItem text="%menubar.edit.delete" onAction="#handleDeleteClicked"/>
                        <MenuItem text="%menubar.edit.rent" onAction="#handleRentClicked"/>
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
    </center>
    <bottom>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS" halignment="CENTER"/>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS" halignment="CENTER"/>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS" halignment="CENTER"/>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS" halignment="CENTER"/>
            </columnConstraints>
            <padding>
                <Insets top="5.0" right="5.0" bottom="5.0" left="5.0"/>
            </padding>
            <!-- Row 0 -->
            <Button GridPane.rowIndex="0" GridPane.columnIndex="0"
                    text="%button.new" onAction="#handleNewClicked"/>
            <Button GridPane.rowIndex="0" GridPane.columnIndex="1"
                    text="%button.edit" onAction="#handleEditClicked"/>
            <Button GridPane.rowIndex="0" GridPane.columnIndex="2"
                    text="%button.delete" onAction="#handleDeleteClicked"/>
            <Button GridPane.rowIndex="0" GridPane.columnIndex="3"
                    text="%button.rent" onAction="#handleRentClicked"/>
        </GridPane>
    </bottom>
</BorderPane>
