<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.util.HashMap?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.htwsaar.prog3.carrental.controller.edit.CarEditViewController"
            onKeyPressed="#handleKeyEvent">
    <top>
        <BorderPane BorderPane.alignment="CENTER">
            <left>
                <GridPane alignment="center" hgap="10" vgap="10">
                    <Label text="%car.label.edit-title" style="-fx-font-weight: bold" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                </GridPane>
            </left>
            <BorderPane.margin>
                <Insets bottom="20"/>
            </BorderPane.margin>
        </BorderPane>
    </top>
    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
            <Label text="%car.label.brand" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="brandTextField" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label text="%car.label.model" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <TextField fx:id="modelTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="%car.label.category" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <TextField fx:id="categoryTextField" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <Label text="%car.label.color" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
            <TextField fx:id="colorTextField" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            <Label text="%car.label.construction-year" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
            <TextField fx:id="constructionYearTextField" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
            <Label text="%car.label.driven-distance" GridPane.columnIndex="5" GridPane.rowIndex="0"/>
            <TextField fx:id="drivenDistanceTextField" GridPane.columnIndex="5" GridPane.rowIndex="1"/>
            <Label text="%car.label.gearbox" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <fx:define>
                <HashMap fx:id="gearboxBundle"
                         manual="%car.label.gearbox.manual"
                         automatic="%car.label.gearbox.automatic"/>
            </fx:define>
            <ChoiceBox fx:id="gearBoxChoiceBox" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <fx:reference source="gearboxBundle.manual"/>
                        <fx:reference source="gearboxBundle.automatic"/>
                    </FXCollections>
                </items>
            </ChoiceBox>
            <Label text="%car.label.horsepower" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <TextField fx:id="horsePowerTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Label text="%car.label.fuel" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <fx:define>
                <HashMap fx:id="fuelBundle"
                         gasoline="%car.label.fuel.gasoline"
                         diesel="%car.label.fuel.diesel"
                         hybrid="%car.label.fuel.hybrid"
                         electric="%car.label.fuel.electric"/>
            </fx:define>
            <ChoiceBox fx:id="fuelChoiceBox" GridPane.columnIndex="2" GridPane.rowIndex="3">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <fx:reference source="fuelBundle.gasoline"/>
                        <fx:reference source="fuelBundle.diesel"/>
                        <fx:reference source="fuelBundle.hybrid"/>
                        <fx:reference source="fuelBundle.electric"/>
                    </FXCollections>
                </items>
            </ChoiceBox>
            <Label text="%car.label.door-count" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            <TextField fx:id="doorCountTextField" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
            <Label text="%car.label.tires" GridPane.columnIndex="4" GridPane.rowIndex="2"/>
            <TextField fx:id="tiresTextField" GridPane.columnIndex="4" GridPane.rowIndex="3"/>
            <Label text="%car.label.next-inspection" GridPane.columnIndex="5" GridPane.rowIndex="2"/>
            <TextField fx:id="nextInspectionTextField" GridPane.columnIndex="5" GridPane.rowIndex="3"/>
            <Label text="%car.label.vin" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="vinTextField" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <Label text="%car.label.equipment" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <TextField fx:id="equipmentTextField" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="6"/>
            <Label text="%car.label.defects" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
            <TextField fx:id="defectsTextField" GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="6"/>
            <Label text="%car.label.license-number" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
            <TextField fx:id="licenseNumberTextField" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
            <Label text="%car.label.parking-lot" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
            <TextField fx:id="parkingLotTextField" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
            <Label text="%car.label.daily-rate" GridPane.columnIndex="2" GridPane.rowIndex="10"/>
            <TextField fx:id="dailyRateTextField" GridPane.columnIndex="2" GridPane.rowIndex="11"/>
        </GridPane>
    </center>
    <bottom>
        <BorderPane BorderPane.alignment="CENTER">
            <right>
                <GridPane alignment="center" hgap="10" vgap="10">
                    <Button mnemonicParsing="false" onAction="#handleCancelButtonClicked" text="%button.cancel"
                            textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Button mnemonicParsing="false" onAction="#handleApplyButtonClicked" text="%button.apply"
                            textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                </GridPane>
            </right>
            <BorderPane.margin>
                <Insets top="20"/>
            </BorderPane.margin>
        </BorderPane>
    </bottom>
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
</BorderPane>
