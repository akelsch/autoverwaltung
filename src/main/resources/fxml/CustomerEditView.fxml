<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.htwsaar.prog3.carrental.controller.edit.CustomerEditViewController"
            onKeyPressed="#handleKeyEvent">
    <top>
        <BorderPane BorderPane.alignment="CENTER">
            <left>
                <GridPane alignment="center" hgap="10" vgap="10">
                    <Label text="%customer.label.edit-title" style="-fx-font-weight: bold" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                </GridPane>
            </left>
            <BorderPane.margin>
                <Insets bottom="20"/>
            </BorderPane.margin>
        </BorderPane>
    </top>
    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
            <Label text="%customer.label.first-name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="firstNameTextField" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label text="%customer.label.last-name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <TextField fx:id="lastNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="%customer.label.email" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="emailAddressTextField" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <Label text="%customer.label.phone-number" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <TextField fx:id="phoneNumberTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Label text="%customer.label.date-of-birth" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <TextField fx:id="dateOfBirthTextField" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
            <Label text="%customer.label.street" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="streetTextField" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <Label text="%customer.label.house-number" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <TextField fx:id="houseNumberTextField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            <Label text="%customer.label.city" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
            <TextField fx:id="cityTextField" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
            <Label text="%customer.label.zip-code" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
            <TextField fx:id="zipCodeTextField" GridPane.columnIndex="3" GridPane.rowIndex="5"/>
            <Label text="%customer.label.id-number" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <TextField fx:id="idNumberTextField" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
            <Label text="%customer.label.driver-license-id" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
            <TextField fx:id="driverLicenseIdTextField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        </GridPane>
    </center>
    <bottom>
        <BorderPane BorderPane.alignment="CENTER">
            <right>
                <GridPane alignment="center" hgap="10" vgap="10">
                    <Button mnemonicParsing="false" onAction="#handleCancelButtonClicked" text="%button.cancel"
                            textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Button mnemonicParsing="false" onAction="#handleApplyButtonClicked" text="%button.apply"
                            textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                </GridPane>
            </right>
            <BorderPane.margin>
                <Insets top="20"/>
            </BorderPane.margin>
        </BorderPane>
    </bottom>
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
</BorderPane>
