<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import java.util.HashMap?>
<?import javafx.scene.layout.ColumnConstraints?>

<BorderPane xmlns="http://javafx.com/javafx"
	xmlns:fx="http://javafx.com/fxml"
	fx:controller="de.htwsaar.prog3.carrental.controller.RentalTableViewController">
	<top>
		<GridPane BorderPane.alignment="CENTER">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<MenuBar prefHeight="10.0" GridPane.columnIndex="0"
					GridPane.columnSpan="5" GridPane.rowIndex="0">
					<menus>
						<Menu mnemonicParsing="true" text="%menubar-view-file">
							<items>
								<MenuItem mnemonicParsing="false"
									text="%menubar-operation-employees"
									onAction="#switchToEmployeesView" />
								<MenuItem mnemonicParsing="false"
									text="%menubar-operation-rentals"
									onAction="#switchToRentalsView" />
								<MenuItem mnemonicParsing="false"
									text="%menubar-operation-customers"
									onAction="#switchToCustomersView" />
								<MenuItem mnemonicParsing="false"
									text="%menubar-operation-cars" onAction="#switchToCarsView" />
								<MenuItem mnemonicParsing="false"
									text="%menubar-operation-close" onAction="#closeApplication" />
							</items>
						</Menu>
						<Menu mnemonicParsing="true" text="%menubar-view-edit">
							<items>
								<MenuItem mnemonicParsing="false"
									text="%menubar-operation-delete"
									onAction="#handleDeleteButtonClicked" />
								<MenuItem mnemonicParsing="false"
									text="%menubar-operation-edit"
									onAction="#handleEditButtonClicked" />
							</items>
						</Menu>
						<Menu mnemonicParsing="true" text="%menubar-view-help">
							<items>
								<MenuItem mnemonicParsing="false"
									text="%menubar-operation-about"
									onAction="#handleAboutButtonClicked" />
							</items>
						</Menu>
					</menus>
					<padding>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</padding>
				</MenuBar>
				<fx:define>
					<HashMap fx:id="searchComboBoxFieldStrings"
						id="%search-rental-combobox-id"
						begin="%search-rental-combobox-begin"
						car="%search-rental-combobox-car"
						customer="%search-rental-combobox-customer"
						employee="%search-rental-combobox-employee"
						end="%search-rental-combobox-end"
						extraCosts="%search-rental-combobox-extraCosts"
						note="%search-rental-combobox-note" />
				</fx:define>
				<ComboBox fx:id="searchComboBoxField" GridPane.rowIndex="1"
					GridPane.columnIndex="0" promptText="%prompt-search-ComboBoxField"
					prefWidth="Infinity" GridPane.halignment="CENTER"
					GridPane.valignment="CENTER">
					<items>
						<FXCollections fx:factory="observableArrayList">
							<fx:reference source="searchComboBoxFieldStrings.id" />
							<fx:reference
								source="searchComboBoxFieldStrings.begin" />
							<fx:reference
								source="searchComboBoxFieldStrings.car" />
							<fx:reference
								source="searchComboBoxFieldStrings.customer" />
							<fx:reference
								source="searchComboBoxFieldStrings.employee" />
							<fx:reference
								source="searchComboBoxFieldStrings.end" />
							<fx:reference
								source="searchComboBoxFieldStrings.extraCosts" />
							<fx:reference
								source="searchComboBoxFieldStrings.note" />
						</FXCollections>
					</items>
				</ComboBox>
				<fx:define>
					<HashMap fx:id="searchComboBoxComparatorStrings"
						equals="%search-combobox-equals"
						greater="%search-combobox-greater"
						smaller="%search-combobox-smaller" like="%search-combobox-like" />
				</fx:define>
				<ComboBox fx:id="searchComboBoxComparator"
					GridPane.rowIndex="1" GridPane.columnIndex="1"
					promptText="%prompt-search-ComboBoxComparator" prefWidth="Infinity"
					GridPane.halignment="CENTER" GridPane.valignment="CENTER">
					<items>
						<FXCollections fx:factory="observableArrayList">
							<fx:reference
								source="searchComboBoxComparatorStrings.equals" />
							<fx:reference
								source="searchComboBoxComparatorStrings.greater" />
							<fx:reference
								source="searchComboBoxComparatorStrings.smaller" />
							<fx:reference
								source="searchComboBoxComparatorStrings.like" />
						</FXCollections>
					</items>
				</ComboBox>
				<TextField fx:id="searchTextField" GridPane.rowIndex="1"
					GridPane.columnIndex="2" promptText="%prompt-search-TextField"
					GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
				<Button fx:id="buttonApplyCurrentFilter"
					mnemonicParsing="false"
					onAction="#handleApplyCurrentFilterButtonClicked"
					text="%button-applyCurrentFilter-label" textAlignment="CENTER"
					GridPane.rowIndex="1" GridPane.columnIndex="3" prefWidth="Infinity"
					GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
				<Button fx:id="buttonRemoveCurrentFilter"
					mnemonicParsing="false"
					onAction="#handleRemoveCurrentFilterButtonClicked"
					text="%button-removeCurrentFilter-label" textAlignment="CENTER"
					GridPane.rowIndex="1" GridPane.columnIndex="4" prefWidth="Infinity"
					GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
			</children>
		</GridPane>
	</top>
	<center>
		<TableView fx:id="rentalTableView" prefHeight="400.0"
			prefWidth="487.0" BorderPane.alignment="CENTER">
			<columns>
				<TableColumn fx:id="id" text="%table-view-header-id" />
				<TableColumn fx:id="begin" text="%table-view-rental-header-begin" />
				<TableColumn fx:id="car" text="%table-view-rental-header-car" />
				<TableColumn fx:id="customer" text="%table-view-rental-header-customer" />
				<TableColumn fx:id="employee" text="%table-view-rental-header-employee" />
				<TableColumn fx:id="end" text="%table-view-rental-header-end" />
				<TableColumn fx:id="extraCosts" text="%table-view-rental-header-extraCosts" />
				<TableColumn fx:id="note" text="%table-view-rental-header-note" />
			</columns>
		</TableView>
	</center>
	<bottom>
		<GridPane BorderPane.alignment="CENTER" prefHeight="25.0"
			prefWidth="1442.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10"
					prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10"
					prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Button fx:id="buttonEditSelectedObject" mnemonicParsing="false"
					onAction="#handleEditButtonClicked" text="%button-edit-label"
					textAlignment="CENTER" GridPane.columnIndex="0"
					GridPane.rowIndex="0" GridPane.halignment="CENTER"
					GridPane.valignment="CENTER" />
				<Button fx:id="buttonDeleteSelectedObject"
					mnemonicParsing="false" onAction="#handleDeleteButtonClicked"
					text="%button-delete-label" textAlignment="CENTER"
					GridPane.columnIndex="1" GridPane.rowIndex="0"
					GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
			</children>
		</GridPane>
	</bottom>
</BorderPane>