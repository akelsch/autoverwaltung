<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import java.util.HashMap?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.htwsaar.prog3.carrental.controller.table.RentalTableViewController"
            onKeyPressed="#handleKeyEvent"
            stylesheets="@styles.css">
    <fx:define>
        <HashMap fx:id="searchComboBoxFieldStrings"
                 id="%rental.label.id"
                 car="%rental.label.car"
                 customer="%rental.label.customer"
                 employee="%rental.label.employee"
                 begin="%rental.label.begin"
                 end="%rental.label.end"
                 extraCosts="%rental.label.extra-costs"
                 note="%rental.label.note"/>
    </fx:define>
    <fx:define>
        <HashMap fx:id="searchComboBoxComparatorStrings"
                 equals="%search.operator.equals"
                 greater="%search.operator.greater-than"
                 smaller="%search.operator.less-than"
                 like="%search.operator.contains"/>
    </fx:define>
    <top>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS"/>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS"/>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS"/>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS"/>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS"/>
            </columnConstraints>
            <!-- Row 0 -->
            <MenuBar GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="5">
                <Menu text="%menubar.file">
                    <MenuItem text="%menubar.file.cars" onAction="#handleCarMenuItemClicked"/>
                    <MenuItem text="%menubar.file.customers" onAction="#handleCustomerMenuItemClicked"/>
                    <MenuItem text="%menubar.file.employees" onAction="#handleEmployeeMenuItemClicked"/>
                    <MenuItem text="%menubar.file.rentals" onAction="#handleRentalMenuItemClicked"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="%menubar.file.close" onAction="#handleCloseMenuItemClicked"/>
                </Menu>
                <Menu text="%menubar.edit">
                    <MenuItem text="%menubar.edit.edit" onAction="#handleEditClicked"/>
                    <MenuItem text="%menubar.edit.delete" onAction="#handleDeleteClicked"/>
                </Menu>
                <Menu text="%menubar.help">
                    <MenuItem text="%menubar.help.about" onAction="#handleAboutMenuItemClicked"/>
                </Menu>
            </MenuBar>
            <!-- Row 1 -->
            <ComboBox fx:id="searchAttributeComboBox" GridPane.rowIndex="1" GridPane.columnIndex="0" maxWidth="Infinity"
                      promptText="%search.prompt.column">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <fx:reference source="searchComboBoxFieldStrings.id"/>
                        <fx:reference source="searchComboBoxFieldStrings.car"/>
                        <fx:reference source="searchComboBoxFieldStrings.customer"/>
                        <fx:reference source="searchComboBoxFieldStrings.employee"/>
                        <fx:reference source="searchComboBoxFieldStrings.begin"/>
                        <fx:reference source="searchComboBoxFieldStrings.end"/>
                        <fx:reference source="searchComboBoxFieldStrings.extraCosts"/>
                        <fx:reference source="searchComboBoxFieldStrings.note"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <ComboBox fx:id="searchOperatorComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="Infinity"
                      promptText="%search.prompt.operator">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <fx:reference source="searchComboBoxComparatorStrings.equals"/>
                        <fx:reference source="searchComboBoxComparatorStrings.greater"/>
                        <fx:reference source="searchComboBoxComparatorStrings.smaller"/>
                        <fx:reference source="searchComboBoxComparatorStrings.like"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <TextField fx:id="searchValueTextField" GridPane.rowIndex="1" GridPane.columnIndex="2" maxWidth="Infinity"
                       promptText="%search.prompt.value"/>
            <Button GridPane.rowIndex="1" GridPane.columnIndex="3" maxWidth="Infinity"
                    text="%search.button.submit" onAction="#handleSearchButtonClicked"/>
            <Button GridPane.rowIndex="1" GridPane.columnIndex="4" maxWidth="Infinity"
                    text="%search.button.reset" onAction="#handleClearFilterButtonClicked"/>
        </GridPane>
    </top>
    <center>
        <TableView fx:id="entityTable">
            <columns>
                <TableColumn text="%rental.label.id">
                    <cellValueFactory>
                        <PropertyValueFactory property="id"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%rental.label.car">
                    <cellValueFactory>
                        <PropertyValueFactory property="car"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%rental.label.customer">
                    <cellValueFactory>
                        <PropertyValueFactory property="customer"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%rental.label.employee">
                    <cellValueFactory>
                        <PropertyValueFactory property="employee"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%rental.label.begin">
                    <cellValueFactory>
                        <PropertyValueFactory property="begin"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%rental.label.end">
                    <cellValueFactory>
                        <PropertyValueFactory property="end"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%rental.label.extra-costs">
                    <cellValueFactory>
                        <PropertyValueFactory property="extraCosts"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="%rental.label.note">
                    <cellValueFactory>
                        <PropertyValueFactory property="note"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem text="%menubar.edit.edit" onAction="#handleEditClicked"/>
                        <MenuItem text="%menubar.edit.delete" onAction="#handleDeleteClicked"/>
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
    </center>
    <bottom>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS" halignment="CENTER"/>
                <ColumnConstraints prefWidth="100.0" hgrow="ALWAYS" halignment="CENTER"/>
            </columnConstraints>
            <padding>
                <Insets top="5.0" right="5.0" bottom="5.0" left="5.0"/>
            </padding>
            <!-- Row 0 -->
            <Button GridPane.rowIndex="0" GridPane.columnIndex="0"
                    text="%button.edit" onAction="#handleEditClicked"/>
            <Button GridPane.rowIndex="0" GridPane.columnIndex="1"
                    text="%button.delete" onAction="#handleDeleteClicked"/>
        </GridPane>
    </bottom>
</BorderPane>
